<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">  
<%= form_with(model: article) do |form| %>
  <% if article.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(article.errors.count, "error") %> prohibited this article from being saved:</h2>

      <ul>
        <% article.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <br>
  <div class='form-group'>
    <%= form.label :name,class:'form-label mb-2 mt-3' %>
    <%= form.text_field :name, class:'form-control form-control-lg' %>
  </div>

  <div class='form-group'>
    <%= form.label :description, class:'form-label mb-2 mt-3',rows:'4',cols:'50' %>
    <%= form.text_area :description, class:'form-control form-control-lg' %>
  </div>

  <div class='form-group'>
    <%= form.label :avatar, class:'form-label mb-2 mt-3',rows:'4',cols:'50' %>
    <%= form.file_field :avatar, class:'form-control form-control-lg' %>
  </div>

  <div class='form-group'>
    <%= form.label :author_name, class:'form-label mb-2 mt-3' %>
    <%= form.text_field :author_name, class:'form-control form-control-lg'%>
  </div>
   <div class='form-group'>
    <%= form.label :author_id, class:'form-label mb-2 mt-3' %>
    <%= form.number_field :author_id, class:'form-control form-control-lg'%>
  </div>

  <br>

  <div>
    <%= form.submit class: "btn btn-primary"%>
    <%= link_to 'Back', articles_path, class: "btn btn-secondary"%>
  </div>
<% end %>
