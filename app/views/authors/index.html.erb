<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">

  <div class='container'> 
      <br><br>
      <h1>Authors</h1>
      <br>
      <div>
        <%= link_to 'Create New', new_author_path, class: 'btn btn-primary' %>
      </div>
      <br>
      <table>
        <thead>
          <table class="w3-table-all">
          <tr class="w3-light-grey w3-hover-grey">
            <th>Name</th>
            <th>Email</th>
            <th colspan = '3'>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @authors.each do |author| %>
            <tr class="w3-hover-grey">
            <td> <%= author.author_name %> </td>
            <td> <%= author.email%> </td>
            <td><%= link_to 'View',author_url(author), class: 'btn btn-light'%></td>  
            <td><%= link_to 'Delete',author_url(author), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: 'btn btn-danger' %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
</div>
